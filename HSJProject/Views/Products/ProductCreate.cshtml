@{
    ViewData["Title"] = "Product Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model HSJProject.DataModels.Product

<div class="card card-info col-6 justify-content-center m-0">
    <div class="card-header">
        <h3 class="card-title">
            Create a New Products
        </h3>
    </div>
    <form asp-action="ProductCreate" asp-controller="Products">
        <div class="card-body">

        <div class="form-group">
            <label>Name:</label>
            <input type="text" class="form-control" asp-for="ProductName">
        </div>

        <div class="form-group">
            <label>Price:</label>
            <input type="text" class="form-control" asp-for="ProductPrice">
        </div>

        <div class="form-group">
            <label>Image:</label>
            <input type="text" class="form-control" asp-for="ProductImage">
        </div>

        <div class="form-group">
            <label>Product Stock:</label>
            <input type="text" class="form-control" asp-for="ProductStock">
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="IsActive">
            <label class="form-check-label">Is Active</label>
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
</div>