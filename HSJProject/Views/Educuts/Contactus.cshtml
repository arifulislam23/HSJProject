@{
    Layout = "~/Views/Shared/_EducutLayout.cshtml";
    ViewData["Title"] = "EduCtu Contact Page";
}
@model HSJProject.DataModels.Contact

<!-- contact section -->
<section class="contact_section  long_section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <div class="heading_container">
                        <h2>
                            Contact Us
                        </h2>
                    </div>

                    <form asp-action="ContactSubmit" asp-controller="Educuts">
                        <div>
                            <input type="text" asp-for="Name" placeholder="Your Name" />
                        </div>
                        <div>
                            <input type="text" asp-for="PhoneNumber" placeholder="Phone Number" />
                        </div>
                        <div>
                            <input type="email" asp-for="Email" placeholder="Email" />
                        </div>
                        <div>
                            <input type="text" asp-for="Message" class="message-box" placeholder="Give you google map locaiton link" />
                        </div>
                        <div class="btn_box">
                            <button>
                                SEND
                            </button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="col-md-6">
                <div class="map_container">
                    <div class="map">
                        <div id="">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3529.953137967876!2d90.4053863750994!3d23.863833284412536!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2bc337b6b77c3f9f%3A0x44df60b253b9ae23!2sFirotech%20Ltd!5e1!3m2!1sen!2sbd!4v1733990456092!5m2!1sen!2sbd" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end contact section -->
